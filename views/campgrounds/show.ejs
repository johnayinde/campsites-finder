<%- include('../partials/header') %>
<div class="container">
  <div class="row mt-4">
    <div class="col-md-3">
      <p class="lead">YelpCamp Sidebar</p>
      <div class="list-group">
        <li class="list-group-item active">info 1</li>
        <li class="list-group-item">info 2</li>
        <li class="list-group-item">info 3</li>

        <div class="mb-4">Google map section</div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card">
        <div class="card-body">
          <img src="<%= details.image %>" alt="" />
          <div class="card-padding mt-2 p-3">
            <p><em>Submitted by: <%= details.author.username %></em></p>
            <span class="float-right">jan 23 2004</span>
            <h4 class="card-title"><%= details.name %></h4>
            <p class="card-text"><%= details.description %></p>
          </div>
        </div>
      </div>

      <div class="card mt-2">
        <div class="card-footer">
          <div class="text-right">
            <a
              class="btn btn-success"
              href="/campgrounds/<%= details._id %>/comments/new"
              >Post a Comment</a
            >
          </div>

          <% details.comments.forEach(comment =>{ %>
          <div class="row">
            <div class="col-md-12">
              <hr />
              <strong><%= comment.author.username %></strong>
              <span class="float-right text-muted">2 days ago</span>
              <p><%= comment.text %></p>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
