<%- include('../partials/header') %>

<div class="container">
  <h1 class="text-center">Edit <%= campground.name %></h1>
  <div class="row">
    <div style="width: 40%; margin: 20px auto;">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
        <div class="form-group">
          <input type="text" class="form-control" name="name" value="<%= campground.name %>" />
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="image" value="<%= campground.image %>" />
        </div>
        <div class="form-group">
          <input type="number" class="form-control" name="price" min="100" value="<%= campground.price %>" />
        </div>
        <div class="form-group">
          <textarea class="form-control" name="description"><%= campground.description %></textarea>
        </div>

        <button type="submit" class="btn btn-primary btn-block btn-md">
          Update
        </button>
      </form>
      <a href="/campgrounds">Go back</a>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>