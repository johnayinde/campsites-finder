<%- include('../partials/header') %>

<div class="container">
  <h1 class="text-center">Create a new comment</h1>
  <div class="row">
    <div style="width: 40%; margin: 20px auto;">
      <form action="/campgrounds/<%= result._id %>/comments" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Author</label>
          <input type="text" class="form-control" name="author" value="<%= currentUser.username  %> " disabled
            aria-describedby="emailHelp" placeholder="your name" />
        </div>

        <div class="form-group">
          <label for="exampleInputPassword1">text</label>
          <textarea class="form-control" name="text" placeholder="your Comment"></textarea>
        </div>

        <button type="submit" class="btn btn-primary btn-block btn-md">
          Add Comment
        </button>
      </form>
      <a href="/campground">Go back</a>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>